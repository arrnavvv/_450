class Solution {
    public boolean isHappy(int n) {
       HashMap<Integer,Integer> map=new HashMap<>();
        boolean flag=false;
        while(true){
            int sum=0;
            String num = Integer.toString(n);
            for(int i=0;i<num.length();i++){
                sum+= Integer.parseInt(Character.toString(num.charAt(i)))*Integer.parseInt(Character.toString(num.charAt(i)));
            }
            //System.out.println(sum);
            n = sum;
            if(sum==1){
                flag=true;
                break;
            }
            else if(map.getOrDefault(sum,0)==1){
                break;
            }else{
                map.put(sum,1);
            }
        }
        if(flag){
            return true;
        }else{
            return false;
        }
    }
}
