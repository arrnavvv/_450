class Solution {
    public boolean isPowerOfTwo(int n) {
        if(n<=0)
            return false;
        
        String s = Integer.toBinaryString(n);
        boolean flag=true;
        for(int i=1;i<s.length();i++){
            if(s.charAt(i)=='1'){
                flag=false;
                break;
            }
        }
        return flag;
    }
}
